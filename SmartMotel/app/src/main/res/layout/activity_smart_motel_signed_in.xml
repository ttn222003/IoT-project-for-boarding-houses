                    android:track="@drawable/track"
                    android:textOn="ON"
                    android:textOff="OFF"
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:id="@+id/smartMotelRelay3">

                </Switch>

            </LinearLayout>

            <LinearLayout
