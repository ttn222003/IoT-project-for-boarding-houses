<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/dialogBoxWrongPasswordAlertLayout"
        android:background="@drawable/background_dialog_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wrongPasswordTittle"
            android:textSize="20dp"
            android:paddingTop="28dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/dialogBoxWrongPasswordAlertLayout"
            android:text="Tài khoản hoặc mật khẩu chính xác"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registerSuccessMessage"
            android:text="Xin vui lòng nhập lại"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/wrongPasswordTittle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/successIcon"
        android:src="@drawable/wrong_password"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialogBoxWrongPasswordAlertLayout"
        app:layout_constraintBottom_toTopOf="@id/dialogBoxWrongPasswordAlertLayout"/>

</androidx.constraintlayout.widget.ConstraintLayout>