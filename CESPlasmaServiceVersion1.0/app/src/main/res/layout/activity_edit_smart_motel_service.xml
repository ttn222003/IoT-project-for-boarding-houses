<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmartMotelService.EditSmartMotelServiceActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/smartMotelServiceTextView"
            android:text="Smart Motel Service"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextView"
            android:text="Chỉnh sửa thông tin"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="40dp"
            app:layout_constraintTop_toBottomOf="@id/smartMotelServiceTextView"/>

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/editTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressTextInputLayout"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:hint="Chọn địa chỉ"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxStrokeColor="@color/green"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/editTextView"
            app:layout_constraintStart_toEndOf="@id/addressTextView"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addressAutoCompleteTextView"
                android:textSize="18dp"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/theNumberOfFansTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quạt"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/addressTextInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/theNumberOfFansTextInputLayout"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:hint="Chọn số lượng muốn thay đổi"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxStrokeColor="@color/green"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/addressTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/theNumberOfFansTextView"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/theNumberOfFansAutoCompleteTextView"
                android:textSize="18dp"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/theNumberOfLampsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đèn"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/theNumberOfFansTextInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/theNumberOfLampsTextInputLayout"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:hint="Chọn số lượng muốn thay đổi"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxStrokeColor="@color/green"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/theNumberOfFansTextInputLayout"
            app:layout_constraintStart_toEndOf="@id/theNumberOfLampsTextView"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/theNumberOfLampsAutoCompleteTextView"
                android:textSize="18dp"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/addImageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ảnh"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/theNumberOfLampsTextInputLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/image"
            android:id="@+id/uploadImageImageView"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/theNumberOfLampsTextInputLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/addImageTextView"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editButton"
            android:text="Chỉnh sửa"
            android:textSize="15dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/uploadImageImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>