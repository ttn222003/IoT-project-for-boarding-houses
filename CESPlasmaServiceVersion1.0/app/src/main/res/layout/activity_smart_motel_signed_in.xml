<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dashboardSignedIn.SmartMotelSignedInActivity">

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cesplasmaTextView"
        android:text="CESPLASMA"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CESTextView"
        app:layout_constraintTop_toBottomOf="@id/cesplasmaTextView"
        android:text="Creativity, Environmentally, Service"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="16dp">

    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editInformationMotelCardView"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp">


        <!-- Mot lop layout ben trong nua de dam bao Card view duoc cang giua-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editInformationMotelCardViewTextView"
                android:text="Đăng ký/ Chỉnh sửa thông tin nhà trọ"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/editInfoImage" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/editInfoImage"
                android:src="@drawable/resume"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/manageMotelCardView"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardElevation="20dp"
        app:cardCornerRadius="30dp">

        <!-- Mot lop layout ben trong nua de dam bao Card view duoc cang giua-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/manageMotelCardViewTextView"
                android:text="Quản lý nhà trọ"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/manageMotelImage" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/manageMotelImage"
                android:src="@drawable/project_management"
                android:layout_margin="15dp"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>